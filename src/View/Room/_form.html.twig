<h2>Ajouter/modifier une chambre</h2>

<form method="post" class="uk-form-horizontal uk-margin-large">
	<input type="hidden" value="{{ room.id }}" name="id">
    <div class="uk-margin">
        <label class="uk-form-label" for="name">ID interne :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="number" value="{{ room.name }}" id="name" name="name">
        	</div>
    </div>
    <div class="uk-margin">
        <label class="uk-form-label" for="name">Nom :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="text" value="{{ room.nameFront }}" id="nameFront" name="nameFront">
        	</div>
    </div>
	<div class="uk-margin">
        <label class="uk-form-label" for="name">Capacité :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="number" value="{{ room.nbpersons }}" id="nbpersons" name="nbpersons">
        	</div>
    </div>
	<div class="uk-margin">
        <label class="uk-form-label" for="name">Prix :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="text" value="{{ room.price }}" id="price" name="price">
        	</div>
    </div>
	<div class="uk-margin">
        <label class="uk-form-label" for="name">Prix SP :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="text" value="{{ room.pricesp }}" id="pricesp" name="pricesp">
        	</div>
    </div>
    <div class="uk-margin">
        <label class="uk-form-label" for="name">Description détaillée :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="text" value="{{ room.description }}" id="description" name="description">
        	</div>
    </div>
	<div class="uk-margin">
        <label class="uk-form-label" for="name">Description :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="text" value="{{ room.resume }}" id="resume" name="resume">
        	</div>
    </div>
    <div class="uk-margin">
        <label class="uk-form-label" for="name">Adresse :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="text" value="{{ room.address }}" id="address" name="address">
        	</div>
    </div>
    <div class="uk-margin">
        <label class="uk-form-label" for="name">Image :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="text" value="{{ room.image }}" id="image" name="image">
        	</div>
    </div>
	<div>
		<button class="uk-button rb-button" type="submit" name="submit">Submit</button>
	</div>	
</form>
