<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/assets/images/favicon.png">

    <title>
    {% block title %}Index Room{% endblock %}
    </title>

    {% block stylesheet %}
    <!-- UIkit CSS -->
			<link
				rel="stylesheet"
				href="https://cdn.jsdelivr.net/npm/uikit@3.16.15/dist/css/uikit.min.css"/>
			<link
				rel="stylesheet"
				href="/assets/css/admin.css">
    {% endblock %}
</head>

<body>
    {% block content %}
        <nav class="uk-navbar-container">
    <div class="uk-container rb-navbar">
        <div uk-navbar>
            <div class="uk-navbar-left">
                <ul class="uk-navbar-nav">
                    <div><a class="rb-border-button" href="/">AIR CNC</a></div>   
						<li>Gestion des chambres</li>
                        <div>
                            <a class="rb-navbar">Gestion des services</a>
                            <div class="uk-navbar-dropdown">
                                <ul class="uk-nav uk-navbar-dropdown-nav">
                                    <li><a href="/rooms">Gestion des chambres</a></li>
                                    <li><a href="/reservations">Gestion des réservations</a></li>
                                    <li><a href="/users">Gestion des membres</a></li>
                                    <li><a href="/mealplans">Gestion des options</a></li>
                                </ul>
                            </div>
                        </div>
                </ul>
            </div>
            <div class="uk-navbar-right">
                <ul class="uk-navbar-nav">
                    <div><a class="rb-navbar" href="/dashboard">Dashboard</a></div> 
                    <li><span uk-icon="icon: user; ratio: 1.5"></span>Admin</li>
                    <div><a class="rb-border-button" href="/logout">Logout</a></div>   
                </ul>
            </div>
        </div>
    </div>
</nav>

<main>
<h2>Liste des chambres</h2>

<div class="uk-overflow-auto">
    <table class="uk-table uk-table-hover uk-table-middle uk-table-divider">
        <thead>
            <tr>
                <th class="uk-table-shrink rb-thead">ID interne</th>
                <th class="uk-table-expand rb-thead">Nom</th>
                <th class="uk-table-shrink uk-text-nowrap">Capacité</th>
                <th class="uk-table-shrink uk-text-nowrap">Prix</th>
                <th class="uk-table-shrink uk-text-nowrap">Prix SP</th>
                <th class="uk-table-expand">Description</th>
                <th class="uk-table-expand">Adresse</th>
                <th class="uk-table-shrink uk-text-nowrap"></th>
            </tr>
        </thead>
        <tbody>
          {% for room in rooms %}
            <tr class="rb-tbody">
                <td>{{ room.name }}</td>
                <td>{{ room.nameFront }}</td>
                <td>{{ room.nbpersons }}</td>
                <td>{{ room.price }}</td>
                <td>{{ room.pricesp }}</td>
                <td>{{ room.resume }}</td>
                <td>{{ room.address }}</td>
                <td><button class="uk-button rb-button">
                  <a href="/rooms/show?id={{ room.id }}">
                Voir</button></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    
				<button class="uk-button rb-button">
					<a href="/rooms/add">Ajouter une chambre</a>
				</button>
			
</div>
</main>

  <footer>
    <p class="footer">&copy; 2023 AIRCNC Tous droits réservés</p>
</footer> 
    {% endblock %}

    {% block javascript %}
    <!-- UIkit JS -->
			<script
				src="https://cdn.jsdelivr.net/npm/uikit@3.16.15/dist/js/uikit.min.js"></script>
			<script
				src="https://cdn.jsdelivr.net/npm/uikit@3.16.15/dist/js/uikit-icons.min.js"></script>
            <script 
                src="uikit/dist/js/uikit-icons.min.js"></script>
    {% endblock %}
</body>
</html>
