<h2>Ajouter/modifier un membre</h2>

<form method="post" class="uk-form-horizontal uk-margin-large">
	<input type="hidden" value="{{ user.id }}" name="id">
    <div class="uk-margin">
        <label class="uk-form-label" for="name">User :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="text" value="{{ user.user }}" id="user" name="user">
        	</div>
    </div>
	<div class="uk-margin">
        <label class="uk-form-label" for="name">Statut :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="text" value="{{ user.statut }}" id="statut" name="statut">
        	</div>
    </div>
	<div class="uk-margin">
        <label class="uk-form-label" for="name">Mot de passe :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="password" value="{{ user.password }}" id="password" name="password">
        	</div>
    </div>
	<div class="uk-margin">
        <label class="uk-form-label" for="name">Prénom :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="text" value="{{ user.firstname }}" id="firstname" name="firstname">
        	</div>
    </div>
	<div class="uk-margin">
        <label class="uk-form-label" for="name">Nom :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="text" value="{{ user.lastname }}" id="lastname" name="lastname">
        	</div>
    </div>
    <div class="uk-margin">
        <label class="uk-form-label" for="name">Téléphone :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="number" value="{{ user.phonenb }}" id="phonenb" name="phonenb">
        	</div>
    </div>
    <div class="uk-margin">
        <label class="uk-form-label" for="name">Mail :</label>
       		<div class="uk-form-controls">
            	<input class="uk-input" id="form-horizontal-text" type="email" value="{{ user.mail }}" id="mail" name="mail">
        	</div>
    </div>
	<div>
		<button class="uk-button rb-button" type="submit" name="submit">Submit</button>
	</div>	
</form>
